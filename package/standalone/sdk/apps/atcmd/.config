CONFIG_CJSON	= y
CONFIG_MQTT		= n
CONFIG_MXML		= n
CONFIG_AWS		= n
CONFIG_TINYCBOR	= n
CONFIG_COAP		= n

CONFIG_ATCMD_CLI = n
CONFIG_ATCMD_HOST = n
CONFIG_ATCMD_USER = n
CONFIG_ATCMD_TEST = n
CONFIG_ATCMD_NRC7392 = n

ifneq ($(findstring _HOST,$(APP_NAME)), )
CONFIG_LWIP = n
CONFIG_ATCMD_HOST = y
endif

#######################################################################

DEFINE += -DCONFIG_$(APP_NAME)

ifdef ATCMD_UART_BAUDRATE
DEFINE	+= -DCONFIG_ATCMD_UART_BAUDRATE=$(ATCMD_UART_BAUDRATE)
else
DEFINE	+= -DCONFIG_ATCMD_UART_BAUDRATE=115200
endif

ifeq ($(CONFIG_ATCMD_CLI),y)
DEFINE += -DCONFIG_ATCMD_CLI
endif

ifeq ($(CONFIG_ATCMD_HOST),y)
DEFINE += -DCONFIG_ATCMD_HOST
DEFINE += -DCONFIG_ATCMD_WITHOUT_LWIP
endif

ifeq ($(CONFIG_ATCMD_USER),y)
DEFINE += -DCONFIG_ATCMD_USER
endif

ifeq ($(CONFIG_ATCMD_TEST),y)
DEFINE += -DCONFIG_ATCMD_TEST
endif

ifeq ($(CONFIG_ATCMD_DEBUG),y)
DEFINE += -DCONFIG_ATCMD_DEBUG
endif

ifeq ($(CONFIG_ATCMD_NRC7392),y)
DEFINE += -DCONFIG_ATCMD_NRC7392
endif

DEFINE += -DCONFIG_ATCMD_TASK_PRIORITY=2 # 0: highest (NRC_TASK_PRIORITY)

